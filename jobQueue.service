[Unit]
Description=Job Queue Service
After=network-online.target ssh.service setupCPUForDSP.service

[Service]
User=YOURUSERNAME
ExecStart=JOBQUEUERUN.SH_LOCATION
Type=oneshot
RemainAfterExit=yes
TimeoutSec=600

[Install]
WantedBy=multi-user.target